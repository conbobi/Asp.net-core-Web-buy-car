@{
    Layout = "_SecureLayout";
}
<div class="section">
    <div class="row">
        <!-- Thẻ thống kê -->
        <div class="col s12 m4">
            <div class="card blue lighten-2 white-text">
                <div class="card-content">
                    <span class="card-title">Tổng khách hàng</span>
                    <h4>1,250</h4>
                </div>
            </div>
        </div>
        <div class="col s12 m4">
            <div class="card green lighten-2 white-text">
                <div class="card-content">
                    <span class="card-title">Tổng đơn hàng</span>
                    <h4>320</h4>
                </div>
            </div>
        </div>
        <div class="col s12 m4">
            <div class="card red lighten-2 white-text">
                <div class="card-content">
                    <span class="card-title">Doanh thu</span>
                    <h4>$15,000</h4>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Biểu đồ -->
    <div class="row">
        <div class="col s12 m8">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Thống kê doanh thu</span>
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bảng danh sách -->
    <div class="row">
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Yêu cầu gần đây</span>
                    <table class="highlight responsive-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Khách hàng</th>
                                <th>Dịch vụ</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>001</td>
                                <td>Nguyễn Văn A</td>
                                <td>Bảo trì</td>
                                <td class="green-text">Hoàn thành</td>
                            </tr>
                            <tr>
                                <td>002</td>
                                <td>Trần Thị B</td>
                                <td>Nâng cấp</td>
                                <td class="red-text">Đang xử lý</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section">
    <div class="row">
        <!-- Bánh răng quay -->
        <div class="col s12 center-align">
            <div class="gear"></div>
        </div>
    </div>
</div>

<!-- Thêm script để vẽ biểu đồ -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var ctx = document.getElementById('revenueChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5'],
                datasets: [{
                    label: 'Doanh thu',
                    data: [5000, 7000, 8000, 12000, 15000],
                    borderColor: 'blue',
                    fill: false
                }]
            }
        });
    });
</script>
